# API Configuration (application indépendante)
NODE_ENV=development
API_PORT=3001
API_BASE_URL=http://localhost:3001
APP_BASE_URL=http://localhost:3000

# Database (dédiée à l'application)
DATABASE_URL=postgresql://mdmc_ads_user:mdmc_ads_password@localhost:5432/mdmc_music_ads

# Redis Cache
REDIS_URL=redis://localhost:6379

# JWT & Security
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters
JWT_REFRESH_SECRET=your_refresh_token_secret_at_least_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MCC_CUSTOMER_ID=1234567890
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
YOUTUBE_API_KEY=your_youtube_api_key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (domaine de l'application)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@mdmc-ads.com

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Features
ENABLE_REGISTRATION=true
ENABLE_GOOGLE_ADS_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Business Rules
DEFAULT_CAMPAIGN_PRICE_EUR=200
VAT_RATE=0.22
CAMPAIGN_DURATION_DAYS=30
MAX_CAMPAIGNS_PER_USER=10

# Application URLs (indépendantes)
COMPANY_WEBSITE_URL=https://mdmc.fr
APP_WEBSITE_URL=https://mdmc-ads.com
TERMS_URL=https://mdmc-ads.com/terms
PRIVACY_URL=https://mdmc-ads.com/privacy